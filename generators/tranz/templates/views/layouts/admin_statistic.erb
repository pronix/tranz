<% inside_layout 'application' do -%>

<script src="http://cdn.jquerytools.org/1.2.3/form/jquery.tools.min.js"></script>
<%= stylesheet_link_tag 'calendar' %>
<div class="middle_block_last">
  <h1 class="dotted small">Statistic</h1>
  <% form_tag '', :method => :get do %>
      Select date From: <%= text_field_tag 'start_range', @start_range.to_s(:date_time2), :class => 'j_calendar' %>
      To: <%= text_field_tag 'end_range', @end_range.to_s(:date_time2), :class => 'j_calendar' %>
    <%= submit_tag 'Submit', :class => "yellow_button" %>
  <% end %>
  <ul class="content_menu">
    <li class=<%= 'content_menu_a' if params[:action][/overall/] %>>
      <% link_to overall_admin_statistics_path do -%>
      <span class="conten_menu_left"><span class="conten_menu_right">Overall statistic</span></span>
      <% end -%>
    </li>

    <li class=<%= 'content_menu_a' if params[:action][/users/] %>>
      <% link_to users_admin_statistics_path do -%>
      <span class="conten_menu_left"><span class="conten_menu_right">User statistic</span></span>
      <% end -%>
    </li>

    <li class=<%= 'content_menu_a' if params[:action][/files/] -%>>
      <% link_to files_admin_statistics_path do -%>
      <span class="conten_menu_left"><span class="conten_menu_right">File statistic</span></span>
      <% end -%>
    </li>
  </ul>

  <%= yield %>

</div>
<% end -%>

<script type="text/javascript" charset="utf-8">
 	$(function() { $(".j_calendar").dateinput({format: 'dd/mm/yyyy'}); });
</script>
