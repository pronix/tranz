<% semantic_form_for :pay, :url => paypal_pay_path,
                       :html => {:class => "base_form"}  do |form| %>
<% form.inputs  do -%>
<%= form.input :amount, :wrapper_html => {:class => "base_form" } %>
<% end -%>
<% form.buttons do -%>
<%= form.commit_button t('paypal.continue', :default => "Continue"), :class => "base_buttons"  %>
<% end -%>
<% end %>
